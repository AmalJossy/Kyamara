{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "name": "Camera Toolkit",
  "description": "Toolkit for webcams",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
